@import "./variables.styl"

//#root
//  height: 100%

img
  width: 100%

/* === 浮动相关 === */
.pull-left
  float: left

.pull-right
  float: right

.clearfix
  &::before,
  &::after
    content: ""
    display: block
    line-height: 0
    visibility: hidden
    clear: both


/* === flex 相关 === */
.flex
  display: flex
  align-items: center

.flex-row
  @extend .flex

.flex-col
  @extend .flex
  flex-direction: column

.flex-center
  @extend .flex
  justify-content: center

/* === 链接 === */
a
  &:link,
  &:visited
    color: $text-color-lv1
  &:hover,
  &:active
    color: $theme-color

/* === 盒阴影 === */
.box-shadow
  box-shadow: 0 0 10px 0  rgba(204, 204, 204, 0.65)

/* === input placeholder === */
::-webkit-input-placeholder
  color: $text-color-lv3
:-moz-placeholder /* Mozilla Firefox 4 to 18 */
  color: $text-color-lv3
::-moz-placeholder /* Mozilla Firefox 19+ */
  color: $text-color-lv3
:-ms-input-placeholder /* Internet Explorer 10+ */
  color: $text-color-lv3

/* === 文字相关 === */
.text-del
  text-decoration: line-through

/* === 文字颜色 === */
.text-primay
  color: $color-primary

.text-primary
  color: $color-primary
.text-secondary
  color: $color-secondary
.text-success
  color: $color-success
.text-danger
  color: $color-danger
.text-warning
  color: $color-warning

/* === 按钮相关 === */
.btn-white
  color: $theme-color
  background: #fff
  transition: color $transition-duration, background-color $transition-duration
  &:hover
    color: #fff
    background: $theme-color
.btn-pink
  color: #fff
  background: $theme-color
  transition: color $transition-duration, background-color $transition-duration
  &:hover
    background: #F02356
.btn-grey
  color: #999999
  background: #eee

/* === 文字... === */
.text-ellipsis
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

/* === 控制显示隐藏 === */
.display-none
  display: none

/* === 统一 hover 样式 === */
.el-hover
  position: relative
  &:hover,
  &:active
    &:after
      content: ""
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
  &:hover
    &:after
      background: rgba(255, 255, 255, .14)
  &:active
    &:after
      background: rgba(255, 255, 255, .04)

/* === 自定义滚动条 === */
::-webkit-scrollbar-track
  -webkit-box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.2)
  background-color: #fafafa

::-webkit-scrollbar
  width: 8px
  background-color: #F5F5F5

::-webkit-scrollbar-thumb
  border-radius: 5px
  background-color: #999

/* === 圆角 === */
.border-radius
  border-radius: 4px

/* === 面包屑 === */
.bread-crumb
  margin-bottom: 20px

.link
  &:link, &:visited, &:hover, &:active
    text-decoration: underline
